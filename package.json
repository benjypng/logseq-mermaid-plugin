{
	"name": "logseq-mermaid-plugin",
	"author": "benjypng",
	"description": "Create mermaid diagrams using mermaid.ink or your own local mermaid.ink server.",
	"license": "MIT",
	"logseq": {
		"id": "logseq-mermaid-plugin",
		"title": "logseq-mermaid-plugin",
		"icon": "./icon.svg",
		"main": "dist/index.html"
	},
	"scripts": {
		"dev": "npx vite",
		"build": "npx tsc && npx vite build",
		"preview": "npx vite preview"
	},
	"release": {
