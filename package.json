{
  "name": "logseq-mermaid-plugin",
  "author": "benjypng",
  "description": "Create mermaid diagrams in image format on-the-fly.",
  "license": "MIT",
  "logseq": {
    "id": "logseq-mermaid-plugin",
    "title": "logseq-mermaid-plugin",
    "icon": "./icon.svg",
    "main": "dist/index.html"
  },
  "scripts": {
    "dev": "bunx vite",
    "build": "bunx vite build",
    "build:plugin": "bunx eslint . --fix && bunx tsc && bunx vite build",
    "prepare": "husky",
    "lint:precommit": "echo \"Running biome\" && bunx @biomejs/biome check --write . && echo \"Running tsc\" && tsc && echo \"Running build\" && bun run build"
  },
  "release": {
    "branches": ["main"],
    "plugins": [
      [
        "@semantic-release/github",
        {
          "assets": ["logseq-mermaid-plugin.zip"]
        }
      ]
    ]
  },
  "dependencies": {
    "@logseq/libs": "^0.2.10",
    "js-base64": "^3.7.7",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "husky": "^9.1.7",
    "typescript": "^5.5.4",
    "vite": "^7.3.0",
    "vite-plugin-logseq": "^1.1.2",
    "vite-tsconfig-paths": "^6.0.3"
  }
}
